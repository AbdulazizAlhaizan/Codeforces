//solution in c++:
#include <iostream>
using namespace std;

int main(){
    long long int n;
    cin >> n;
    if (n % 2 == 0 && n  >  1) 
    cout << n/2;
    else
    cout << -((n+1)/2);
    return 0;
}

//--------------------------------------------------------------------

//solution in Java:

import java.util.Scanner;

public class Main {

   public static void main(String[] args) {
   Scanner input = new Scanner(System.in);
   long n = input.nextLong();
   if (n % 2 == 0 && n  >  1) {
      System.out.println(n/2);
   } else {
      System.out.println(-((n+1)/2));
   }
   
   }
   }

